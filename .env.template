# Local Chat Companion Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application mode: development, production, testing
APP_MODE=development

# Application name and version
APP_NAME=Local Chat Companion
APP_VERSION=0.1.0

# Debug mode (true/false)
DEBUG=true

# =============================================================================
# LM STUDIO / LOCAL LLM SETTINGS
# =============================================================================

# LM Studio API base URL (default: http://localhost:1234/v1)
LM_STUDIO_API_BASE=http://localhost:1234/v1

# LM Studio API key (if required)
LM_STUDIO_API_KEY=

# Default model name to use
DEFAULT_MODEL=local-model

# Model parameters
MAX_TOKENS=2048
TEMPERATURE=0.7
TOP_P=0.9
FREQUENCY_PENALTY=0.0
PRESENCE_PENALTY=0.0

# =============================================================================
# MEMORY AND STORAGE SETTINGS
# =============================================================================

# Vector database type: chroma, qdrant
VECTOR_DB_TYPE=chroma

# Vector database connection settings
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=6333
VECTOR_DB_COLLECTION=chat_memories

# SQLite database path for structured data
SQLITE_DB_PATH=data/companion.db

# Memory settings
MAX_SESSION_MEMORY=50
MAX_LONG_TERM_MEMORIES=1000
MEMORY_IMPORTANCE_THRESHOLD=0.6

# =============================================================================
# EMBEDDING SETTINGS
# =============================================================================

# Embedding model type: sentence-transformers, openai, local
EMBEDDING_MODEL_TYPE=sentence-transformers

# Sentence transformers model name
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2

# OpenAI embedding settings (if using OpenAI)
OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# =============================================================================
# USER INTERFACE SETTINGS
# =============================================================================

# UI type: cli, web, desktop
UI_TYPE=cli

# Web UI settings (if using web interface)
WEB_HOST=localhost
WEB_PORT=8080

# Theme and styling
UI_THEME=dark
ENABLE_SYNTAX_HIGHLIGHTING=true

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file settings
LOG_TO_FILE=true
LOG_FILE_PATH=logs/companion.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Encryption key for sensitive data (generate with: python -c "import secrets; print(secrets.token_hex(32))")
ENCRYPTION_KEY=

# Enable data encryption at rest
ENCRYPT_DATA=true

# Session timeout in minutes
SESSION_TIMEOUT=60

# =============================================================================
# BEHAVIOR SETTINGS
# =============================================================================

# Default personality style: friend, coach, assistant, custom
DEFAULT_STYLE=friend

# Enable learning from conversations
ENABLE_LEARNING=true

# Enable auto-save of sessions
AUTO_SAVE_SESSIONS=true

# Conversation safety features
ENABLE_CONTENT_FILTERING=true
ENABLE_PII_DETECTION=true

# =============================================================================
# FEEDBACK AND ANALYTICS
# =============================================================================

# Enable feedback collection
ENABLE_FEEDBACK=true

# Enable usage analytics (local only)
ENABLE_ANALYTICS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable development features
DEV_MODE=true

# Enable API debugging
API_DEBUG=false

# Test data settings
USE_TEST_DATA=false
TEST_DATA_PATH=tests/fixtures/

# =============================================================================
# BACKUP AND EXPORT SETTINGS
# =============================================================================

# Auto-backup settings
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=data/backups/

# Export formats supported
EXPORT_FORMATS=json,txt,markdown